html(lang="ko")
    head
        //- meta(charset="UTF-8")
        //- meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //- meta(http-equiv="X-UA-Compatible", content="ie=edge")
        //- title Document
    body   
        h1 회원가입
        form(action="signup", method="post")
            div
                span 우리 비밀번호
                    input(type="password", name="our_pw" placeholder="비번")
            div
                span 이름 
                    input(type="text", name="id" placeholder="이름(한글로 적으셈)") 
            div
                span 비번
                    input(type="password", name="pw" placeholder="비번")
            button(type="submit" id="try-signup") 등록 
    script.
        document.getElementById('try-signup').addEventListener('click', (e) => {
            if(confirm('등록할랍니까?') !== true) {
                e.preventDefault()
                return false;
            } 
        })

    